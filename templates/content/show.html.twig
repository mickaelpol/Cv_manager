{% extends 'base.html.twig' %}

{% block title %}Content{% endblock %}

{% block body %}
    <h1>Content</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ content.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ content.title }}</td>
            </tr>
            <tr>
                <th>Text</th>
                <td>{{ content.text }}</td>
            </tr>
            <tr>
                <th>Rating</th>
                <td>{{ content.rating }}</td>
            </tr>
            <tr>
                <th>DateStart</th>
                <td>{{ content.dateStart ? content.dateStart|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>DateEnd</th>
                <td>{{ content.dateEnd ? content.dateEnd|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ content.createdAt ? content.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Icon</th>
                <td>{{ content.icon }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_content_index') }}">back to list</a>

    <a href="{{ path('app_content_edit', {'id': content.id}) }}">edit</a>

    {{ include('content/_delete_form.html.twig') }}
{% endblock %}
