{% extends 'base.html.twig' %}

{% block title %}Content index{% endblock %}

{% block body %}
    <h1>Content index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Text</th>
                <th>Rating</th>
                <th>DateStart</th>
                <th>DateEnd</th>
                <th>CreatedAt</th>
                <th>Icon</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for content in contents %}
            <tr>
                <td>{{ content.id }}</td>
                <td>{{ content.title }}</td>
                <td>{{ content.text }}</td>
                <td>{{ content.rating }}</td>
                <td>{{ content.dateStart ? content.dateStart|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ content.dateEnd ? content.dateEnd|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ content.createdAt ? content.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ content.icon }}</td>
                <td>
                    <a href="{{ path('content_show', {'id': content.id}) }}">show</a>
                    <a href="{{ path('content_edit', {'id': content.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('content_new') }}">Create new</a>
{% endblock %}
