            <div class="text-danger">
                {{ error.message }}
            </div>
        {% endfor %}
    {% endif %}

    {{ form_label(form.title,  "Cat√©gorie : ") }}
    <div class='mt10 input'>
        {{ form_widget(form.title, { 'attr' : {'class': 'form-control'} }) }}
    </div>
    {% do  form.title.setRendered %}

    <button class="btn">{{ button_label|default('Save') }}</button>
{{ form_end(form) }}
