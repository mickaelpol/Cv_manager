{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <h1>Register</h1>

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.username) }}
        {{ form_row(registrationForm.lastname) }}
        {{ form_row(registrationForm.firstname) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.adress) }}
        {{ form_row(registrationForm.city) }}
        {{ form_row(registrationForm.country) }}
        {{ form_row(registrationForm.phonenumber) }}
        {{ form_row(registrationForm.age) }}
        {{ form_row(registrationForm.permit) }}
        {{ form_row(registrationForm.vehicle) }}
        {{ form_row(registrationForm.job) }}
        {{ form_row(registrationForm.facebook) }}
        {{ form_row(registrationForm.linkedin) }}
        {{ form_row(registrationForm.instagram) }}
        {{ form_row(registrationForm.twitter) }}
        {{ form_row(registrationForm.pinterest) }}
        {{ form_row(registrationForm.youtube) }}
        {{ form_row(registrationForm.picture) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
        {{ form_row(registrationForm.agreeTerms) }}

        <button type="submit" class="btn">Register</button>
    {{ form_end(registrationForm) }}
{% endblock %}
